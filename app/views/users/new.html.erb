<div class="min-h-screen bg-slate-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="flex justify-center">
                <div class="w-16 h-16 bg-gradient-to-br from-amber-600 via-orange-500 to-red-600 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-white" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                        <path d="M20 8C20 8 16 12 16 20C16 28 20 32 24 32C28 32 32 28 32 20C32 12 28 8 24 8C20 8 20 8 20 8Z" fill="currentColor" />
                        <path d="M22 12C22 12 20 14 20 18C20 22 22 24 24 24C26 24 28 22 28 18C28 14 26 12 24 12C22 12 22 12 22 12Z" fill="white" fill-opacity="0.3" />
                    </svg>
                </div>
            </div>
            <h2 class="text-center text-3xl font-bold text-slate-900">Create Account</h2>
            <p class="mt-2 text-center text-sm text-slate-600">
                Join our community and start your cultural journey
            </p>
        </div>

        <%= form_with model: @user, url: signup_path, class: "mt-8 space-y-6" do |form| %>
        <div class="space-y-4">
            <div>
                <%= form.label :name, "Full Name", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M16 7a4 4 0 11-8 0 4 4 0 018 0zM12 14a7 7 0 00-7 7h14a7 7 0 00-7-7z" />
                    </svg>
                    <%= form.text_field :name, 
                  class: "w-full pl-11 pr-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                  placeholder: "John Doe", 
                  required: true,
                  value: params.dig(:user, :name) %>
                </div>
            </div>

            <div>
                <%= form.label :email, "Email Address", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                    </svg>
                    <%= form.email_field :email, 
                  class: "w-full pl-11 pr-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                  placeholder: "student@example.com", 
                  required: true,
                  value: params.dig(:user, :email) %>
                </div>
            </div>

            <div>
                <%= form.label :password, "Password", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    <%= form.password_field :password, 
                  class: "w-full pl-11 pr-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                  placeholder: "••••••••", 
                  required: true %>
                </div>
                <p class="mt-1 text-xs text-slate-500">Must be at least 6 characters long</p>
            </div>

            <div>
                <%= form.label :password_confirmation, "Confirm Password", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    <%= form.password_field :password_confirmation, 
                  class: "w-full pl-11 pr-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                  placeholder: "••••••••", 
                  required: true %>
                </div>
            </div>
        </div>

        <div>
            <%= form.submit "Create Account", 
              class: "w-full bg-amber-700 text-white py-3 rounded-lg hover:bg-amber-800 transition-colors duration-200 font-semibold text-lg cursor-pointer" %>
        </div>

        <div class="text-center">
            <p class="text-sm text-slate-600">
                Already have an account?
                <%= link_to "Login here", login_path, class: "font-medium text-amber-700 hover:text-amber-800 transition-colors duration-200 ml-1" %>
            </p>
        </div>

        <!-- Terms Notice -->
        <div class="p-4 bg-amber-50 border border-amber-200 rounded-lg">
            <p class="text-xs text-amber-800 text-center">
                By creating an account, you agree to our
                <a href="#" class="underline hover:no-underline">Terms of Service</a>
                and
                <a href="#" class="underline hover:no-underline">Privacy Policy</a>
            </p>
        </div>
        <% end %>
    </div>
</div>