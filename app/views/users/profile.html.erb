<div class="min-h-screen bg-slate-50 py-12">
    <div class="max-w-4xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="bg-white rounded-2xl shadow-sm border border-slate-200 overflow-hidden">
            <!-- Profile Header -->
            <div class="bg-gradient-to-r from-amber-600 via-orange-500 to-red-600 px-8 py-12 text-white">
                <div class="flex items-center space-x-6">
                    <div class="w-20 h-20 bg-white bg-opacity-20 rounded-full flex items-center justify-center">
                        <svg class="w-10 h-10 text-white" viewBox="0 0 40 40" fill="none" xmlns="http://www.w3.org/2000/svg">
                            <path d="M20 8C20 8 16 12 16 20C16 28 20 32 24 32C28 32 32 28 32 20C32 12 28 8 24 8C20 8 20 8 20 8Z" fill="currentColor" />
                            <path d="M22 12C22 12 20 14 20 18C20 22 22 24 24 24C26 24 28 22 28 18C28 14 26 12 24 12C22 12 22 12 22 12Z" fill="white" fill-opacity="0.3" />
                        </svg>
                    </div>
                    <div>
                        <h1 class="text-3xl font-bold"><%= current_user.name %></h1>
                        <p class="text-amber-100 mt-1"><%= current_user.email %></p>
                        <p class="text-amber-200 text-sm mt-2">Member since <%= current_user.created_at.strftime("%B %Y") %></p>
                    </div>
                </div>
            </div>

            <!-- Profile Content -->
            <div class="p-8">
                <div class="grid md:grid-cols-3 gap-8">
                    <!-- Edit Profile Form -->
                    <div class="md:col-span-2">
                        <h2 class="text-2xl font-bold text-slate-900 mb-6">Profile Information</h2>

                        <%= form_with model: @user, url: profile_path, method: :patch, class: "space-y-6" do |form| %>
                        <div class="grid md:grid-cols-2 gap-6">
                            <div>
                                <%= form.label :name, "Full Name", class: "block text-sm font-medium text-slate-700 mb-2" %>
                                <%= form.text_field :name, 
                        class: "w-full px-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                        required: true %>
                            </div>

                            <div>
                                <%= form.label :email, "Email Address", class: "block text-sm font-medium text-slate-700 mb-2" %>
                                <%= form.email_field :email, 
                        class: "w-full px-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                        required: true %>
                            </div>
                        </div>

                        <div class="pt-4">
                            <%= form.submit "Update Profile", 
                      class: "bg-amber-700 text-white px-8 py-3 rounded-lg hover:bg-amber-800 transition-colors duration-200 font-semibold cursor-pointer" %>
                        </div>
                        <% end %>
                    </div>

                    <!-- Account Actions -->
                    <div class="space-y-6">
                        <div class="bg-amber-50 border border-amber-200 rounded-lg p-6">
                            <h3 class="text-lg font-semibold text-amber-900 mb-4">Account Actions</h3>
                            <div class="space-y-3">
                                <%= link_to "Change Password", forgot_password_path, class: "block w-full text-center bg-white text-amber-700 px-4 py-2 rounded border border-amber-300 hover:bg-amber-100 transition-colors duration-200 text-sm font-medium" %>
                                <%= link_to "My Course Progress", courses_path, class: "block w-full text-center bg-amber-700 text-white px-4 py-2 rounded hover:bg-amber-800 transition-colors duration-200 text-sm font-medium" %>
                                <%= button_to "Delete Account", "#", class: "block w-full text-center bg-red-50 text-red-700 px-4 py-2 rounded border border-red-200 hover:bg-red-100 transition-colors duration-200 text-sm font-medium", disabled: true, title: "Contact support to delete account" %>
                            </div>
                        </div>

                        <!-- Quick Stats -->
                        <div class="bg-slate-50 border border-slate-200 rounded-lg p-6">
                            <h3 class="text-lg font-semibold text-slate-900 mb-4">Learning Stats</h3>
                            <div class="space-y-4">
                                <div class="flex justify-between items-center">
                                    <span class="text-sm text-slate-600">Enrolled Courses</span>
                                    <span class="text-lg font-bold text-amber-700">3</span>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-sm text-slate-600">Completed</span>
                                    <span class="text-lg font-bold text-green-600">1</span>
                                </div>
                                <div class="flex justify-between items-center">
                                    <span class="text-sm text-slate-600">Learning Hours</span>
                                    <span class="text-lg font-bold text-blue-600">24h</span>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>