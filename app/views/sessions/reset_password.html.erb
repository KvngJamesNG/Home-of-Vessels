<div class="min-h-screen bg-slate-50 flex items-center justify-center py-12 px-4 sm:px-6 lg:px-8">
    <div class="max-w-md w-full space-y-8">
        <div>
            <div class="flex justify-center">
                <div class="w-16 h-16 bg-gradient-to-br from-amber-600 via-orange-500 to-red-600 rounded-lg flex items-center justify-center mb-4">
                    <svg class="w-8 h-8 text-white" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 7a2 2 0 012 2m4 0a6 6 0 01-7.743 5.743L11 17H9v2H7v2H4a1 1 0 01-1-1v-2.586a1 1 0 01.293-.707l5.964-5.964A6 6 0 1121 9z" />
                    </svg>
                </div>
            </div>
            <h2 class="text-center text-3xl font-bold text-slate-900">Set New Password</h2>
            <p class="mt-2 text-center text-sm text-slate-600">
                Create a new password for your account
            </p>
        </div>

        <%= form_with url: update_password_path, method: :patch, class: "mt-8 space-y-6" do |form| %>
        <%= form.hidden_field :token, value: params[:token] %>

        <div class="space-y-4">
            <div>
                <%= form.label :password, "New Password", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    <%= form.password_field :password, 
                  class: "w-full pl-11 pr-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                  placeholder: "••••••••", 
                  required: true %>
                </div>
                <p class="mt-1 text-xs text-slate-500">Must be at least 6 characters long</p>
            </div>

            <div>
                <%= form.label :password_confirmation, "Confirm New Password", class: "block text-sm font-medium text-slate-700 mb-2" %>
                <div class="relative">
                    <svg class="absolute left-3 top-1/2 -translate-y-1/2 h-5 w-5 text-slate-400" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 15v2m-6 4h12a2 2 0 002-2v-6a2 2 0 00-2-2H6a2 2 0 00-2 2v6a2 2 0 002 2zm10-10V7a4 4 0 00-8 0v4h8z" />
                    </svg>
                    <%= form.password_field :password_confirmation, 
                  class: "w-full pl-11 pr-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none transition-colors duration-200", 
                  placeholder: "••••••••", 
                  required: true %>
                </div>
            </div>
        </div>

        <div>
            <%= form.submit "Reset Password", 
              class: "w-full bg-amber-700 text-white py-3 rounded-lg hover:bg-amber-800 transition-colors duration-200 font-semibold text-lg cursor-pointer" %>
        </div>

        <div class="text-center">
            <p class="text-sm text-slate-600">
                <%= link_to "Back to login", login_path, class: "font-medium text-amber-700 hover:text-amber-800 transition-colors duration-200" %>
            </p>
        </div>
        <% end %>
    </div>
</div>