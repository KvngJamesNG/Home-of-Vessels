<section class="py-20 min-h-screen bg-white">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <!-- Header -->
        <div class="text-center max-w-3xl mx-auto mb-12">
            <h2 class="text-3xl font-bold text-slate-900 mb-4">Our Courses</h2>
            <p class="text-lg text-slate-600 mb-8">
                Explore our comprehensive range of courses designed to educate, heal, and inspire.
                <%= "Login to enroll and start your cultural journey." unless @logged_in %>
            </p>

            <% unless @logged_in %>
            <%= link_to "Student Login", login_path, class: "bg-amber-700 text-white px-8 py-3 rounded-lg hover:bg-amber-800 transition-colors inline-flex items-center gap-2" %>
            <% else %>
            <div class="inline-flex items-center gap-2 bg-green-50 text-green-700 px-6 py-3 rounded-lg">
                <div class="w-2 h-2 bg-green-500 rounded-full"></div>
                <span>Logged in as <%= current_user.name %></span>
                <%= link_to "My Profile", profile_path, class: "ml-4 text-sm underline hover:no-underline" %>
                <%= link_to "Logout", logout_path, method: :delete, class: "ml-4 text-sm underline hover:no-underline" %>
            </div>
            <% end %>
        </div>

        <!-- Courses Grid -->
        <div class="grid md:grid-cols-2 lg:grid-cols-3 gap-8">
            <% courses = [
