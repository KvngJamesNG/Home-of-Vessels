        },
        {
          id: '3',
          title: 'Contemporary African Dance',
          instructor: 'Adama Koné',
          price: '£75',
          duration: '4 weeks',
          students: 62,
          rating: 4.7,
          image: 'https://images.unsplash.com/photo-1760428300773-d63612e252c1?crop=entropy&cs=tinysrgb&fit=max&fm=jpg&ixid=M3w3Nzg4Nzd8MHwxfHNlYXJjaHwxfHxjdWx0dXJhbCUyMGRhbmNlJTIwcGVyZm9ybWFuY2V8ZW58MXx8fHwxNzYwODUxMzUyfDA&ixlib=rb-4.1.0&q=80&w=1080&utm_source=figma&utm_medium=referral',
          description: 'Explore the fusion of traditional African movements with contemporary dance.',
