<section class="py-20 bg-slate-50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="text-center max-w-3xl mx-auto mb-12">
            <h2 class="text-3xl font-bold text-slate-900 mb-4">Get In Touch</h2>
            <p class="text-lg text-slate-600">
                Have questions about our programs or want to collaborate? We'd love to hear from you.
            </p>
        </div>

        <div class="grid md:grid-cols-2 gap-12">
            <!-- Contact Information -->
            <div>
                <div class="bg-gradient-to-br from-amber-700 via-orange-600 to-red-600 rounded-2xl p-8 text-white mb-8">
                    <h3 class="text-2xl font-bold text-white mb-6">Contact Information</h3>

                    <div class="space-y-6">
                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-amber-100 mb-1">Email</p>
                                <p>info@homeofvessels.com</p>
                                <p class="text-sm text-amber-100">courses@homeofvessels.com</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-amber-100 mb-1">Phone</p>
                                <p>+44 20 7946 0958</p>
                                <p class="text-sm text-amber-100">+1 555 123 4567</p>
                            </div>
                        </div>

                        <div class="flex items-start gap-4">
                            <div class="w-12 h-12 bg-white bg-opacity-20 rounded-lg flex items-center justify-center flex-shrink-0">
                                <svg class="h-6 w-6" fill="none" viewBox="0 0 24 24" stroke="currentColor">
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z" />
                                    <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z" />
                                </svg>
                            </div>
                            <div>
                                <p class="text-sm text-amber-100 mb-1">Offices</p>
                                <p class="mb-2">London, United Kingdom</p>
                                <p>Serving clients worldwide</p>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Office Hours -->
                <div class="bg-white border-2 border-slate-100 rounded-xl p-6">
                    <h4 class="text-xl font-semibold text-slate-900 mb-4">Office Hours</h4>
                    <div class="space-y-2 text-sm">
                        <div class="flex justify-between">
                            <span class="text-slate-600">Monday - Friday</span>
                            <span class="text-slate-900">9:00 AM - 6:00 PM</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-600">Saturday</span>
                            <span class="text-slate-900">10:00 AM - 4:00 PM</span>
                        </div>
                        <div class="flex justify-between">
                            <span class="text-slate-600">Sunday</span>
                            <span class="text-slate-900">Closed</span>
                        </div>
                    </div>
                </div>
            </div>

            <!-- Contact Form -->
            <div class="bg-white border-2 border-slate-100 rounded-2xl p-8">
                <h3 class="text-2xl font-semibold text-slate-900 mb-6">Send us a Message</h3>

                <%= form_with url: contact_form_path, class: "space-y-5" do |form| %>
                <div>
                    <%= form.label :name, "Full Name *", class: "block text-sm text-slate-700 mb-2" %>
                    <%= form.text_field :name, class: "w-full px-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none", placeholder: "John Doe", required: true %>
                </div>

                <div>
                    <%= form.label :email, "Email Address *", class: "block text-sm text-slate-700 mb-2" %>
                    <%= form.email_field :email, class: "w-full px-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none", placeholder: "john@example.com", required: true %>
                </div>

                <div>
                    <%= form.label :subject, "Subject *", class: "block text-sm text-slate-700 mb-2" %>
                    <%= form.select :subject, 
                [
                  ["Select a subject", ""],
                  ["Course Inquiry", "courses"],
                  ["Book a Performance", "performance"],
                  ["Exhibition Information", "exhibition"],
                  ["Therapy Programs", "therapy"],
                  ["Partnership Opportunity", "partnership"],
                  ["Other", "other"]
                ], {}, 
                class: "w-full px-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none",
                required: true %>
                </div>

                <div>
                    <%= form.label :message, "Message *", class: "block text-sm text-slate-700 mb-2" %>
                    <%= form.text_area :message, rows: 5, class: "w-full px-4 py-3 border-2 border-slate-200 rounded-lg focus:border-amber-600 focus:outline-none resize-none", placeholder: "Tell us more about your inquiry...", required: true %>
                </div>

                <%= form.submit "Send Message", class: "w-full bg-amber-700 text-white py-3 rounded-lg hover:bg-amber-800 transition-colors flex items-center justify-center gap-2" %>
                <% end %>
            </div>
        </div>
    </div>
</section>